APP_NAME=Savirix
APP_ENV=production
# Application key is generated at runtime (see `php artisan key:generate --force` in CI)
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
SAVARIX_ADMIN_PATH=savarix-admin
# Comma-separated list of marketing domains that must not expose /login
MARKETING_DOMAINS=savarix.com

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=${DB_HOST:-127.0.0.1}
DB_PORT=${DB_PORT:-3306}
DB_DATABASE=${DB_DATABASE:-savarix}
DB_USERNAME=${DB_USERNAME:-root}
DB_PASSWORD=${DB_PASSWORD:-root}

# Stancl Tenancy configuration
TENANCY_CENTRAL_CONNECTION=${DB_CONNECTION}
TENANCY_CENTRAL_DOMAINS="127.0.0.1,localhost,savirix.localhost"

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=.savarix.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,0.0.0.0,.savarix.com

MAIL_MAILER=smtp
MAIL_HOST=${MAIL_HOST:-mailpit}
MAIL_PORT=${MAIL_PORT:-1025}
MAIL_USERNAME=${MAIL_USERNAME:-null}
MAIL_PASSWORD=${MAIL_PASSWORD:-null}
MAIL_ENCRYPTION=${MAIL_ENCRYPTION:-null}
MAIL_FROM_ADDRESS=${MAIL_FROM_ADDRESS:-null}
MAIL_FROM_NAME="${APP_NAME}"

STRIPE_KEY=${STRIPE_KEY:-pk_test_your_publishable_key_here}
STRIPE_SECRET=${STRIPE_SECRET:-sk_test_your_secret_key_here}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET:-whsec_your_webhook_secret_here}

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_APP_ENV="${APP_ENV}"
VITE_APP_URL="${APP_URL}"

DOCUSIGN_API_KEY=
DOCUSIGN_API_SECRET=
HELLOSIGN_API_KEY=
OPENAI_API_KEY=
OTHER_REQUIRED_KEY=

ONFIDO_API_TOKEN=
ONFIDO_WEBHOOK_SECRET=
ONFIDO_WORKFLOW_ID=
ONFIDO_BASE_URL=https://api.eu.onfido.com
ONFIDO_API_VERSION=v3.6
ONFIDO_SHARE_LINK_TTL=3600


# Optional GitHub token used for Composer downloads
GITHUB_TOKEN=
