{
  "name": "Laravel Dev",
  "image": "mcr.microsoft.com/devcontainers/php:8.3",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/mysql:1": {
      "version": "8.0",
      "mysqlDatabase": "ressapp",
      "mysqlUser": "ressuser",
      "mysqlPassword": "secret"
    }
  },
  "forwardPorts": [8000],
  "remoteEnv": {
    "APP_URL": "http://localhost:8000",
    "DB_CONNECTION": "mysql",
    "DB_HOST": "localhost",
    "DB_PORT": "3306",
    "DB_DATABASE": "ressapp",
    "DB_USERNAME": "ressuser",
    "DB_PASSWORD": "secret",
    "CACHE_DRIVER": "file",
    "SESSION_DRIVER": "file",
    "QUEUE_CONNECTION": "sync"
  },
  "updateContentCommand": "chmod +x setup.sh && ./setup.sh --db-wait --seed",
  "postStartCommand": "php artisan serve --host=0.0.0.0 --port=8000 &",
  "customizations": { "vscode": { "extensions": ["bmewburn.vscode-intelephense-client", "esbenp.prettier-vscode"] } },
  "postAttachCommand": "echo 'make init | make dev | make test | make pint'"
}